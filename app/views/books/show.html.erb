<main>
<div class="container px-5 px-sm-0">
  <div class="row">
     <div class="col-md-3">
       <%= render partial: 'users/sidebar', locals: { user: @user, book: @book } %>
     </div>
        <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
            <table class="table">
            <tbody>
                <tr>
                  <td>
                    <%= link_to user_path(@user) do %>
                    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><br>
                    <%= @user.name %>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to book_path(params[:id]) do %>
                    <%= @books.title %>
                    <% end %>
                    </td>
                  <td>
                    <%= @books.body %>
                  </td>
        
                  <td>
                    <% if @books.user == current_user %>
                    <div class=row>
                      <%= link_to "Edit", edit_book_path(params[:id]),class:'btn btn-sm btn-success edit_book_765' %>
                    </div>
                    <% end %>
                  </td>
        
                  <td>
                    <% if @books.user == current_user %>
                      <div class=row>
                        <%= link_to "Destroy", book_path(params[:id]),class:'btn btn-sm btn-danger destroy_book_765', method: :delete ,data: { confirm: '本当に消しますか？' } %>
                      </div>
                    <% end %>
                  </td>
            </tbody>
            </table>
                </tr>
                
          　<table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <th colspan="0"></th>
                  <th>User</th>
                  <th>date</th>
                  <th>comment</th>
                </tr>
              </thead>
              <tbody>
              <tr>コメント件数：<%= @books.comments.count %></tr>
              <% @books.comments.each do |comment| %>
              <tr>
                <td class="comment"><%= image_tag'unnamed.jpeg',:size => '30x20' %></td>
                <td class="comment"><%= comment.user.name%></td>
                <td class="comment"><%= comment.created_at.strftime('%Y/%m/%d') %></td>
                <td><%= comment.comment %></td>
              </tr>
                
              <% end %>
              </tbody>
             </table>
          
          <div class="new-comment">
          <%= form_with(model:[@books,@comment], local: true) do |f| %>
          <p> <%= f.text_area :comment, rows:'5',placeholder: "コメントを書いて感想を投稿しよう！" %></p> 
          <p> <%= f.submit "送信する" %></p> 
          <% end %>
          </div>
        </div>
     </div>
  </div>

</main>